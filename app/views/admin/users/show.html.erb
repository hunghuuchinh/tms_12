<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %><br>
        User.id:<%= @user.id %><br>
        Name:<%= @user.name %><br>
        Email:<%= @user.email %><br>
        Created_at: <%= @user.created_at %><br>
        Updated_at :<%= @user.updated_at %><br>
        User is admin? :<%= @user.admin? %><br>
      </h1>
    </section>
  </aside>
</div>
